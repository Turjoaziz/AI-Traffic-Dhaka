<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

  <!-- Vehicle types -->
  <vType id="car" accel="2.5" decel="4.5" maxSpeed="50" length="4.5" color="1,0,0"/>
  <vType id="bus" accel="1.0" decel="2.0" maxSpeed="30" length="12"  color="0,0.6,0"/>
  <vType id="rickshaw" accel="1.5" decel="3.0" maxSpeed="18" length="2.5" color="0,0,1"/>

  <!-- Routes (your North Road edges) -->
  <route id="r_up"   edges="498169188#0 498169188#1 498169188#2 498169188#3"/>
  <route id="r_down" edges="24375221#0 24375221#1 24375221#2 24375221#3"/>

  <!-- Mixed flows: total 1200 vph each way = car 600, bus 120, rickshaw 480 -->
  <!-- Northbound -->
  <flow id="up_car"       route="r_up"   type="car"      begin="0" end="1800" vehsPerHour="600"  departLane="free" departSpeed="max"/>
  <flow id="up_bus"       route="r_up"   type="bus"      begin="0" end="1800" vehsPerHour="120"  departLane="free" departSpeed="max"/>
  <flow id="up_rickshaw"  route="r_up"   type="rickshaw" begin="0" end="1800" vehsPerHour="480"  departLane="free" departSpeed="max"/>

  <!-- Southbound -->
  <flow id="down_car"      route="r_down" type="car"      begin="0" end="1800" vehsPerHour="600"  departLane="free" departSpeed="max"/>
  <flow id="down_bus"      route="r_down" type="bus"      begin="0" end="1800" vehsPerHour="120"  departLane="free" departSpeed="max"/>
  <flow id="down_rickshaw" route="r_down" type="rickshaw" begin="0" end="1800" vehsPerHour="480"  departLane="free" departSpeed="max"/>

</routes>
